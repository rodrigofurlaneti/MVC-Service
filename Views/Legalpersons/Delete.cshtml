@model MeuHelp.Models.Legalperson

@{
    ViewData["Title"] = "Apagar pessoa jurídica";
}
<h2 class="display-4">Apagar pessoa jurídica</h2>
<h3>Tem certeza de que deseja excluir isso?</h3>
<div>
    <h4>Pessoa jurídica</h4>
    <dl class="dl-horizontal">
        <dt>
            Cnpj número
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cnpj)
        </dd>
        <dt>
            Razão social
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RazaoSocial)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a>|
        <input type="submit" value="Apagar" class="btn btn-sm btn-danger" />
    </form>
</div>
