@model MeuHelp.Models.Discount
@{
    ViewData["Title"] = "Adicionar desconto";
}
<h2 class="display-4">Adicionar desconto</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameDiscount" class="control-label"></label>
                <input asp-for="NameDiscount" class="form-control" />
                <span asp-validation-for="NameDiscount" class="text-danger"></span>
            </div>
            <div class="form-row botao">
                <div class="col-md-11">
                    <a asp-action="Index">
                        <input type="button" value="Voltar" class="btn btn-sm btn-secondary" />
                    </a>
                </div>
                <div class="col-md-1">
                    <input type="submit" value="Salvar" class="btn btn-sm btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
