@model IEnumerable<MeuHelp.Models.Serviceprovider>

@{
    ViewData["Title"] = "Prestador de serviço - Pessoa jurídica";
}
    <h2 class="display-4">Prestador de serviço - Pessoa jurídica</h2>
<p>
    <a asp-action="Create">Adicionar prestador de serviço</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Cnpj
            </th>
            <th>
                Nome
            </th>
            <th>
                Telefone
            </th>
            <th>
                Celular
            </th>
            <th>
                Detalhar
            </th>
            <th>
                Editar
            </th>
            <th>
                Apagar
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                <a asp-action="Details" class="btn btn-sm btn-warning" asp-route-id="@item.Id">Detalhar</a>
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-sm btn-info" asp-route-id="@item.Id">Editar</a>
            </td>
            <td>
                <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
