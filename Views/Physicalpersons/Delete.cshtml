@model MeuHelp.Models.Physicalperson

@{
    ViewData["Title"] = "Apagar pessoa física";
}
<h2 class="display-4">Apagar pessoa física</h2>
<h3>Tem certeza de que deseja excluir isso?</h3>
<div>
    <h4>Pessoa física</h4>
    <dl class="dl-horizontal">
        <dt>
            Cpf número
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt>
            Nome
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a>|
        <input type="submit" value="Apagar" class="btn btn-sm btn-danger" />
    </form>
</div>
