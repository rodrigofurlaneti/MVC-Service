@model IEnumerable<MeuHelp.Models.Physicalperson>

@{
    ViewData["Title"] = "Pessoa física";
}
<h2 class="display-4">Pessoa física</h2>
<p>
    <a asp-action="Create">Adicionar pessoa física</a>
</p>
<form class="form-inline">
    <div class="form-group mb-2">
        <label for="staticPhysicalperson" class="sr-only">Buscar pessoa física:</label>
        <input type="text" readonly class="form-control-plaintext" id="staticPhysicalperson" value="Buscar pessoa física:">
    </div>
    <div class="form-group mb-2">
        <label for="input>NomeDaPessoaFisica" class="sr-only">Nome do pessoa física</label>
        <input type="text" class="form-control form-control-sm" id="myInput" onkeyup="myFunctionFiltroNomePessoaFisica()" placeholder="Nome da pessoa física">
    </div>
</form>
<div class="form-group quantTd mb-6">
    <label>Quantidade de pessoas físicas:</label>
    <label id="quantTd"></label>
</div>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Detalhar
            </th>
            <th>
                Editar
            </th>
            <th>
                Apagar
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    <a asp-action="Details" class="btn btn-sm btn-warning" asp-route-id="@item.Id">Detalhar</a>
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-sm btn-info" asp-route-id="@item.Id">Editar</a>
                </td>
                <td>
                    <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    window.onload = contaLinhasTabela();
    function myFunctionFiltroNomePessoaFisica() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("myTable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
    function contaLinhasTabela() {
        var tabela = document.getElementById('myTable');
        var linhas = tabela.getElementsByTagName('tr');
        document.getElementById("quantTd").innerHTML = linhas.length - 1;
    }
</script>