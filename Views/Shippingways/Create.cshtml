@model MeuHelp.Models.Shippingway

@{
    ViewData["Title"] = "Forma de envio";
}
<h4 class="display-4">Adicionar forma de envio</h4>
<form asp-action="Create">
    <div class="col-md-4">
        <div class="form-row">
            <div class="form-group-sm">
                <label asp-for="Nome" class="control-label">Nome:</label>
                <input asp-for="Nome" class="form-control form-control-sm" />
            </div>
        </div>
        <div class="form-row botao">
            <div class="col-md-8">
                <a asp-action="Index">
                    <input type="button" value="Voltar" class="btn btn-sm btn-secondary" />
                </a>
            </div>
            <div class="col-md-4">
                <input type="submit" value="Salvar" class="btn btn-sm btn-success" />
            </div>
        </div>
    </div>
</form>
